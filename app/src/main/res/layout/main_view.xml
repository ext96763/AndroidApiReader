<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_1"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="opendata.profinit.eu.opendataapireader.MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/bg_color_1"
        android:text="Opendata.cz verejne zakazky"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_1"
        android:text="DB last update: "
        android:textAlignment="center"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/footerText"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/bg_color_1"
        tools:text="2012-02-02"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/tendersButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/bg_drawable_btn_edge"
        android:text="@string/tenders"
        android:textColor="@color/shade"
        android:textSize="25sp"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buyersButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/bg_drawable_btn_edge"
        android:text="@string/buyers"
        android:textColor="@color/shade"
        android:textSize="25sp"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/suppliersButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/bg_drawable_btn_edge"
        android:text="@string/suppliers"
        android:textColor="@color/shade"
        android:textSize="25sp"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints" />


</LinearLayout>
